{
  "manifest_version": 3,
  "name": "Haptic Mouse",
  "version": "1.0",
  "description": "捕获鼠标事件和选中文本的浏览器插件",
  "permissions": ["activeTab", "storage", "windows"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}